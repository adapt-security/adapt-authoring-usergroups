{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$anchor": "usergroups",
  "description": "Adds user group sharing properties",
  "type": "object",
  "$patch": {
    "source": { "$ref": "user" },
    "with": {
      "properties": {
        "userGroups": {
          "description": "User groups the target object should be accessible to",
          "type": "array",
          "items": {
            "type": "string",
            "isObjectId": true
          }
        }
      }
    }
  }
}
